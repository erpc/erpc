{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/erpc",
            "args": [],
            "env": {
                "CC": "/usr/bin/cc",
                "CXX": "/usr/bin/c++",
                "CGO_ENABLED": "1",
                "LOG_LEVEL": "debug"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "showLog": true,
            "dlvFlags": [
                "--check-go-version",
                "false",
                "--log",
                "--log-output",
                "debugger,debuglineerr,gdbwire,lldbout,rpc",
            ]
        },
        {
            "name": "Debug Tests (erpc/erpc)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/erpc",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "CC": "/usr/bin/cc",
                "CXX": "/usr/bin/c++",
                "CGO_ENABLED": "1",
                "LOG_LEVEL": "trace"
            }
        }
    ]
}