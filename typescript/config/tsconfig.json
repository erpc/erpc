{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6"
  },
  "include": [
    "src/*"
  ]
}